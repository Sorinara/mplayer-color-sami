+char* strescnext(char *start, const char delminiter)
+{/*{{{*/
+    char *next;
+
+    next = start;
+
+    while((next = strchr(next, delminiter)) != NULL){
+        // next와 start가 같을경우 (맨처음부터 일치하는 경우)
+        // 아래 *(next - 1)이 잘못된 참조를 하게되므로 이를 예방하기 위한 식
+        if(next == start){
+            break;
+        }
+
+        if(*(next - 1) != '\\'){
+           break; 
+        }
+
+        next ++;
+    }
+
+    // add 'delminter' size
+    return next;
